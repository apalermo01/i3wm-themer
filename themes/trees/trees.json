{
	"colors": {
		"settings": {
			"color_mode": "pywal"
		}
	},


    "i3": {
        "use_xresources": true,
		"font": "pango:JetBrainsMono 10",
		"terminal": "gnome-terminal",
		"extra_lines": [
			"# class     border backgr. text indicator child_border",
			"# history: first col was back the all fores",
			"# focused.background was color6"
		],
		"colors": {
			"background": ["#00ffff"],
			"focused":          ["foreground", "foreground", "color1", "color1", "color1"],
			"unfocused":        ["background", "background", "color0", "color8", "color8"],
			"focused_inactive": ["background", "background", "color0", "color8", "color8"],
			"urgent":           ["#ff0000", "#990000", "#color8", "color10", "#ff0000"],
			"placeholder":      ["background", "background", "color0", "color8", "color8"]
		},

		"bindsyms": {
			"$mod+Shift+space": "floating enable, border normal 10",
			"$mod+Control+space": " floating disable, border none"
		}
    },

    "polybar": {
		"bar/main": {
			"separator-foreground": "${colors.color8}"
		},
		"module/xworkspaces": {
			"include": "xworkspaces.ini"
		},
		"module/filesystem": {
			"include": "filesystem.ini"
		},
		"module/pulseaudio": {
			"include": "pulseaudio.ini"
		},
		"module/memory": {
			"include": "memory.ini"
		},
		"module/cpu": {
			"include": "memory.ini"
		},
		"module/date": {
			"include": "date.ini"
		}
    },

	"bash": {
		"pywal_colors": true,
		"git_onefetch": true,
		"extra_lines": ["cbonsai -p"]
	},

	"wallpaper": "./wallpapers/trees.jpg",

	"vim": {
		"colors": "blue_in_green.vim",
		"colorscheme": "blue_in_green"
	},

	"picom": {
	}
}


