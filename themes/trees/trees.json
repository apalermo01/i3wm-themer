{
	"colors": {
		"settings": {
			"color_mode": "pywal"
		}
	},


    "i3": {
        "use_xresources": true,
		"font": "pango:JetBrainsMono 10",
		"terminal": "gnome-terminal",
		"extra_lines": [
			"# class     border backgr. text indicator child_border",
			"# history: first col was back the all fores",
			"# focused.background was color6"
		],
		"colors": {
			"background": ["#00ffff"],
			"focused":          ["foreground", "foreground", "color1", "color10", "color1"],
			"unfocused":        ["background", "background", "color0", "color10", "black"],
			"focused_inactive": ["background", "background", "color0", "color10", "black"],
			"urgent":           ["#ff0000", "#990000", "#color8", "color10", "#ff0000"],
			"placeholder":      ["background", "background", "color0", "color10", "black"]
		},

		"bindsyms": {
			"$mod+Shift+space": "floating enable, border normal 10",
			"$mod+Control+space": " floating disable, border none"
		}
    },

    "polybar": {
        "use_xresources": true,
        "modules-left": "xworkspaces",
        "modules-center": "",
        "modules-right": "filesystem pulseaudio memory cpu date",
		"colors": {
			"background": "background",
			"background-alt": "#373B41",
			"foreground": "foreground",
			"primary": "color10",
			"secondary": "color11",
			"alert": "#A54242",
			"disabled": "#707880",
			"border": "#000000"
		}
    },

	"bash": {
		"pywal_colors": true,
		"git_onefetch": true,
		"extra_lines": ["cbonsai -p"]
	},

	"wallpaper": "./wallpapers/trees.jpg",

	"vim": {
		"colors": "blue_in_green.vim",
		"colorscheme": "blue_in_green"
	},

	"picom": {
	}
}


