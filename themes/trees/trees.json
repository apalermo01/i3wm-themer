{
    "settings": {
        "use_pywal": true,
    	"config": "config.yaml",
    	"install": "./defaults/"
    },

    "xresources": {},

    "i3": {
        "use_xresources": true,
		"font": "pango:JetBrainsMono 10",
		"terminal": "gnome-terminal",
		"colors": {
			"background": ["background"],
			"focused": ["foreground", "background", "foreground", "color12", "color12"],
			"unfocused": ["foreground", "background", "foreground", "color4", "color4"],
			"focused_inactive": ["foreground", "background", "foreground", "color4", "color4"],
			"urgent": ["foreground", "background", "foreground", "color4", "color4"],
			"placeholder": ["foreground", "background", "foreground", "color4", "color4"]
		},

		"bindsyms": {
			"$mod+Shift+space": "floating enable, border normal 10",
			"$mod+Control+space": " floating disable, border none"
		}
    },

    "polybar": {
        "use_xresources": true,
        "modules-left": "xworkspaces",
        "modules-center": "",
        "modules-right": "filesystem pulseaudio memory cpu date",
		"colors": {
			"background": "background",
			"background-alt": "#373B41",
			"foreground": "foreground",
			"primary": "color10",
			"secondary": "color11",
			"alert": "#A54242",
			"disabled": "#707880",
			"border": "#000000"
		}
    },

	"bash": {
		"pywal_colors": true,
		"git_onefetch": true,
		"extra_lines": ["cbonsai -p"]
	},

    "wallpaper": {
		"method": "feh",
		"name": "trees.jpg"
	},

	"vim": {
		"colors": "blue_in_green.vim",
		"colorscheme": "blue_in_green"
	},

	"picom": {
	}
}


